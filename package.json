{
    "name": "@ytdl/ytdl",
    "version": "1.0.0",
    "description": "A CLI written in javascript, which allows you to download videos from [YouTube](http://youtube.com) onto your system.",
    "main": "src/index.ts",
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rm -rf ./dist",
        "test": "mocha --opts test/mocha.opts",
        "lint": "eslint \"src/**/*.{ts,js,jsx}\" \"test/**/*.ts\"",
        "pack-src": "ncc build",
        "pack-cli": "ncc build bin/ytdl -o dist/cli && mv dist/cli/index.js dist/cli/ytdl",
        "pack": "npm run clean && npm run pack-src && npm run pack-cli",
        "start": "ts-node src/index.ts"
    },
    "bin": {
        "ytdl": "bin/ytdl"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ytdl-node/ytdl.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ytdl-node/ytdl/issues"
    },
    "homepage": "https://github.com/ytdl-node/ytdl#readme",
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/chai": "^4.2.11",
        "@types/commander": "^2.12.2",
        "@types/eslint": "^6.1.9",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.9.8",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-typescript": "^7.2.0",
        "eslint-plugin-import": "^2.20.2",
        "husky": "^4.2.3",
        "mocha": "^7.1.1",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@types/fluent-ffmpeg": "^2.1.14",
        "@zeit/ncc": "^0.22.1",
        "axios": "^0.19.2",
        "commander": "^5.0.0",
        "fluent-ffmpeg": "^2.1.2",
        "winston": "^3.2.1"
    }
}
